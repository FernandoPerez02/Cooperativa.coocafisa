<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buscador</title>
    <link rel="stylesheet" href="resources/css/stile_index.css">
</head>
<body>
    <header>
        <h1>Gestión de Datos Tesorería</h1>
    </header>
    <main>
        <table>
            <thead>
                <tr>
                    <th>NIT</th>
                    <th>Empresa</th>
                    <th>Pago</th>
                    <th>Descuento</th>
                    <th>Retención</th>
                    <th>Fecha Pago</th>
                </tr>
            </thead>    
            <tbody>
                <% if (data.length > 0) { %>
                <% data.forEach(row => { %>
                <tr>
                    <td><%= row.nit %></td>
                    <td><%= row.empresa %></td>
                    <td><%= row.pago %></td>
                    <td><%= row.descuento %></td>
                    <td><%= row.retencion %></td>
                    <td><%= formatDate(row.fecha_pago) %></td>
                </tr>
                <% }) %>
                <% } else { %> 
                <tr>
                    <td colspan="6">No se encontraron resultados.</td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </main>
</body>
</html>
